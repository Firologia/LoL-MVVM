<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoL_MVVM.Components.ChampionItemView"
             xmlns:converters="clr-namespace:LoL_MVVM.Converters"
             x:Name="View">

    <ContentView.Resources>
        <converters:Base64ToImageSource x:Key="Base64ToImageSource" />
    </ContentView.Resources>

    <Grid ColumnDefinitions="Auto,Auto" ColumnSpacing="5"
          RowDefinitions="1*,1*"
    >
        <Image Grid.RowSpan="2" 
               Aspect="AspectFill" 
               HeightRequest="40" 
               WidthRequest="40"
               Margin="2"
               Source="{Binding Icon, Converter={StaticResource Base64ToImageSource}}" />

        <Label Text="{Binding Name}"
               Grid.Column="1" 
               FontSize="16" />
        <Label Text="{Binding Class }"
               Grid.Row="1" 
               Grid.Column="1" 
               FontSize="12"
               VerticalOptions="End" />

    </Grid>

</ContentView>
