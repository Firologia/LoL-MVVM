<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoL_MVVM.Components.ChampionItemView"
             x:Name="View">

    <Grid ColumnDefinitions="Auto,Auto" RowDefinitions="Auto,Auto" Padding="10">

        <Image Grid.RowSpan="2" 
               Aspect="AspectFill" 
               HeightRequest="40" 
               WidthRequest="40"
               Source="{Binding ImageSource, Mode=OneTime, Source={x:Reference View}}" />

        <Label Text="{Binding Name}"
               Grid.Column="1" 
               FontSize="16" />
        <Label Text="{Binding Class }"
               Grid.Row="1" 
               Grid.Column="1" 
               FontSize="12"
               VerticalOptions="End" />

    </Grid>
</ContentView>
