<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoL_MVVM.Components.Edition.CaracteristicEditItemView"
             x:Name="View">


    <VerticalStackLayout>
        <Border BackgroundColor="#efe7b7" HeightRequest="40" Margin="10,10,10,0">

            <Border.StrokeShape>
                <RoundRectangle  CornerRadius="10,10,0,10"/>
            </Border.StrokeShape>

            <StackLayout Margin="10,0,0,0" Orientation="Horizontal">

                <Editor Text="{Binding Name, Source={x:Reference View}, Mode=TwoWay}" VerticalOptions="Center" HorizontalOptions="StartAndExpand"/>
                <Editor Text="{Binding Value, Source={x:Reference View}, Mode=TwoWay}" VerticalOptions="Center" HorizontalOptions="EndAndExpand" HorizontalTextAlignment="End"/>

            </StackLayout>

        </Border>


    </VerticalStackLayout>
</ContentView>
