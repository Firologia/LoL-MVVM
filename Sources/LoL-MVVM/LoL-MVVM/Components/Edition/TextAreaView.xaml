<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoL_MVVM.Components.Edition.TextAreaView"
             x:Name="View">
    
    <Border>
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="5"/>
        </Border.StrokeShape>
        <Editor Text="{Binding TextValue, Source={x:Reference View}}" BackgroundColor="#efe7b7"  />
    </Border>
    
</ContentView>