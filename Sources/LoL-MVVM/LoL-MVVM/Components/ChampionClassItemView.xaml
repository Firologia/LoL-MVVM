<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:enums="clr-namespace:ViewModel.Enums;assembly=ViewModel"
             xmlns:converters="clr-namespace:LoL_MVVM.Converters"
             x:Class="LoL_MVVM.Components.ChampionClassItemView"
             x:DataType="enums:ChampionClassVM">

    <ContentView.Resources>
        <converters:ClassIconConverter x:Key="ClassIconConverter"/>
    </ContentView.Resources>

    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
        <Image Source="{Binding Converter={StaticResource ClassIconConverter}}" 
               HeightRequest="40" WidthRequest="40">
            <Image.Behaviors>
                <toolkit:IconTintColorBehavior TintColor="Black" />
            </Image.Behaviors>
        </Image>
        <Label Text="{Binding }" TextColor="Black" />
    </VerticalStackLayout>

</ContentView>
