<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="using:ViewModel.Utils"
             x:Class="LoL_MVVM.Components.CharacteristicItemView"
             x:Name="View">
    
    <Border BackgroundColor="Transparent" 
                                Stroke="#937341"
                                HeightRequest="100" WidthRequest="100">
        <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
            <Label Text="{Binding CharacteristicName, Source={x:Reference View}}" />
            <Label Text="{Binding CharacteristicValue, Source={x:Reference View}}" />
        </VerticalStackLayout>
    </Border>
</ContentView>
