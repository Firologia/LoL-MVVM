<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:converters="clr-namespace:LoL_MVVM.Converters"
             x:Class="LoL_MVVM.Components.ChampionClassItemVIew">

    <ContentView.Resources>
        <converters:ClassIconConverter x:Key="ClassIconConverter" />

    </ContentView.Resources>


        <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
            <Image Source="{Binding Converter={StaticResource ClassIconConverter}}">
                <Image.Behaviors>
                    <toolkit:IconTintColorBehavior TintColor="Black" />
                </Image.Behaviors>
            </Image>
            <Label Text="{Binding}" TextColor="Black" />
        </VerticalStackLayout>

</ContentView>
