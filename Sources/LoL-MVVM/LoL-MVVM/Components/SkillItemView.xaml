<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModel="clr-namespace:ViewModel;assembly=ViewModel"
             x:Class="LoL_MVVM.Components.SkillItemView"
             x:DataType="viewModel:SkillVM">
    <VerticalStackLayout>
        <Grid ColumnDefinitions="1*,1*" RowDefinitions="1*,1*">
            <Label Text="{Binding Name}" Grid.Column="0"/>
            <Label Text="{Binding Type}" Grid.Column="1"/>

            <Label Text="{Binding Description}" Grid.Row="1" Grid.ColumnSpan="2"/>
        </Grid>
    </VerticalStackLayout>
</ContentView>
