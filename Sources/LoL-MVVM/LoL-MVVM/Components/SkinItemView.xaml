<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel ="clr-namespace:ViewModel;assembly=ViewModel"
             xmlns:converters="clr-namespace:LoL_MVVM.Converters"
             x:Class="LoL_MVVM.Components.SkinItemView"
             x:DataType="viewmodel:SkinVM">

    <ContentView.Resources>
        <converters:Base64ToImageSource x:Key="Base64ToImageSource" />
    </ContentView.Resources>

    <Border BackgroundColor="Transparent">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="0,10,10,10" />
        </Border.StrokeShape>
        <HorizontalStackLayout Margin="10,5,0,5">

            <Image Source="{Binding Icon, Converter={StaticResource Base64ToImageSource}}" HeightRequest="50" WidthRequest="50" />
            <Label Text="{Binding Name}" VerticalTextAlignment="Center" Margin="10,0,0,0" TextColor="{StaticResource Primary}"/>

        </HorizontalStackLayout>

    </Border>
    
</ContentView>