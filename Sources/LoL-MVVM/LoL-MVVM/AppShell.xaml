<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="LoL_MVVM.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:LoL_MVVM"
    xmlns:pages="clr-namespace:LoL_MVVM.Pages"
    Shell.FlyoutBehavior="Disabled">
    
    <TabBar>

        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate pages:HomePage}"
            Icon="icon_league_of_legends.png"
            />

        <ShellContent
            Title="Champions"
            ContentTemplate="{DataTemplate pages:ChampionListPage}"
            Icon="icon_sword.png"
            />

    </TabBar>

</Shell>
